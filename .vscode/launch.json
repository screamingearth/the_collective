{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Node: Current File",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "outputCapture": "std"
    },
    {
      "name": "Memory Server Debug",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/memory-server/dist/index.js",
      "cwd": "${workspaceFolder}/memory-server",
      "preLaunchTask": "Build Memory Server",
      "env": {
        "MEMORY_DB_PATH": "${workspaceFolder}/.mcp/collective_memory.duckdb",
        "DEBUG": "collective:memory:*",
        "NODE_ENV": "development"
      },
      "outputCapture": "std",
      "console": "integratedTerminal"
    },
    {
      "name": "Gemini Bridge Debug",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/gemini-bridge/dist/mcp-server.js",
      "cwd": "${workspaceFolder}/gemini-bridge",
      "preLaunchTask": "Build Memory Server",
      "env": {
        "DEBUG": "collective:gemini:*",
        "NODE_ENV": "development"
      },
      "outputCapture": "std",
      "console": "integratedTerminal"
    },
    {
      "name": "Memory Server Test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/memory-server/dist/test-memory.js",
      "cwd": "${workspaceFolder}/memory-server",
      "preLaunchTask": "Build Memory Server",
      "env": {
        "MEMORY_DB_PATH": "${workspaceFolder}/.mcp/collective_memory.duckdb",
        "NODE_ENV": "test"
      },
      "outputCapture": "std",
      "console": "integratedTerminal"
    },
    {
      "name": "Attach to Memory Server",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
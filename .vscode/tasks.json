{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Docker Containers",
      "type": "shell",
      "command": "docker compose up -d --build && echo 'Waiting for servers to be ready...' && sleep 8 && curl -s http://localhost:3100/health http://localhost:3101/health > /dev/null && echo 'MCP servers ready!'",
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "showReuseMessage": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": []
    },
    {
      "label": "Stop Docker Containers",
      "type": "shell",
      "command": "docker compose down",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Switch to Docker Mode",
      "type": "shell",
      "command": "cp .vscode/mcp.docker.json .vscode/mcp.json && echo 'Switched to Docker mode. Please reload VS Code.'",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Switch to stdio Mode",
      "type": "shell",
      "command": "cp .vscode/mcp.stdio.json .vscode/mcp.json && echo 'Switched to stdio mode. Please reload VS Code.'",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Health Check (Quick)",
      "type": "shell",
      "command": "npm run check -- --quick",
      "group": {
        "kind": "test"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Start Memory Server (stdio)",
      "type": "shell",
      "command": "cd .collective/memory-server && npm run build && MCP_TRANSPORT=stdio node dist/index.js",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "runOptions": {
        "runOn": "never"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": ".*",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "listening on"
        }
      }
    },
    {
      "label": "Start Gemini Bridge (stdio)",
      "type": "shell",
      "command": "cd .collective/gemini-bridge && npm run build && MCP_TRANSPORT=stdio node dist/mcp-server.js",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "runOptions": {
        "runOn": "never"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": ".*",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "listening on"
        }
      }
    },
    {
      "label": "Build Framework",
      "type": "shell",
      "command": "npm run check -- --build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$tsc"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Build Memory Server",
      "type": "shell",
      "command": "cd .collective/memory-server && npm run build",
      "group": {
        "kind": "build"
      },
      "problemMatcher": [
        "$tsc"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Build Gemini Bridge",
      "type": "shell",
      "command": "cd .collective/gemini-bridge && npm run build",
      "group": {
        "kind": "build"
      },
      "problemMatcher": [
        "$tsc"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Bootstrap Memories",
      "type": "shell",
      "command": "cd .collective/memory-server && npm run bootstrap",
      "dependsOn": [
        "Build Memory Server"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Validate TypeScript",
      "type": "shell",
      "command": "cd .collective/memory-server && npm run validate && cd ../gemini-bridge && npm run validate",
      "problemMatcher": [
        "$tsc"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Test Memory System",
      "type": "shell",
      "command": "cd .collective/memory-server && npm run test",
      "dependsOn": [
        "Build Memory Server"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Run Framework Validation",
      "type": "shell",
      "command": "npm test",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Full Setup (Fresh Clone)",
      "type": "shell",
      "command": "./setup.sh",
      "problemMatcher": [
        "$tsc"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Clean All",
      "type": "shell",
      "command": "npm run clean",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Update Dependencies",
      "type": "shell",
      "command": "npm run update",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Rebuild Native Modules",
      "type": "shell",
      "command": "npm run rebuild",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Verify Memory System",
      "type": "shell",
      "command": "npm run check -- --memory",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Verify All Systems",
      "type": "shell",
      "command": "npm run check",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
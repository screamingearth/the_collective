{
  // ═══════════════════════════════════════════════════════════════════
  // EDITOR CORE SETTINGS
  // ═══════════════════════════════════════════════════════════════════
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.rulers": [
    80,
    120
  ],
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.enabled": true,
  "editor.suggest.preview": true,
  "editor.suggest.showStatusBar": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.mcp/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.git": true,
    "**/package-lock.json": true,
    "**/.mcp/*.duckdb": true
  },
  "files.autoSave": "afterDelay",
  "files.autoSaveWhenNoErrors": true,
  "files.autoSaveWorkspaceFilesOnly": true,
  "files.autoSaveDelay": 1000,
  // ═══════════════════════════════════════════════════════════════════
  // GITHUB COPILOT CONFIGURATION
  // ═══════════════════════════════════════════════════════════════════
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "markdown": true,
    "plaintext": true,
    "jsonc": true,
    "json": true
  },
  // Enable Copilot chat features
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.runCommand.enabled": true,
  "github.copilot.chat.terminalChatLocation": "quickChat",
  // Agent configuration (official VS Code settings - v1.107 December 2025)
  "chat.agent.enabled": true,
  "chat.agent.maxRequests": 69,
  "github.copilot.chat.agent.autoFix": true,
  // Agent sessions (v1.107)
  "chat.viewSessions.enabled": true,
  "chat.viewSessions.orientation": "stacked",
  // Enable all customization features
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "chat.promptFiles": true,
  "chat.useAgentsMdFile": true,
  "chat.useNestedAgentsMdFiles": false,
  "chat.promptFilesRecommendations": {},
  // Custom agent support (v1.107 experimental)
  "github.copilot.chat.customAgents.showOrganizationAndEnterpriseAgents": true,
  "github.copilot.chat.cli.customAgents.enabled": true,
  // Custom instructions for specific scenarios (reference our guidelines)
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Use conventional commits format (feat:, fix:, docs:, refactor:, test:, chore:). Keep subject under 50 chars. Add body if change is complex."
    }
  ],
  "github.copilot.chat.reviewSelection.instructions": [
    {
      "file": ".github/prompts/review.prompt.md"
    }
  ],
  // ═══════════════════════════════════════════════════════════════════
  // MCP SERVER CONFIGURATION
  // ═══════════════════════════════════════════════════════════════════
  // Auto-start MCP servers: "newAndOutdated" (default) restarts servers when config changes
  // "manual" requires manual server startup. Experimental feature.
  "chat.mcp.autoStart": "newAndOutdated",
  // Enable MCP server gallery for discovery in Extensions
  "chat.mcp.gallery.enabled": true,
  // Allow MCP server access (enables trust prompts for first-time server startup)
  "chat.mcp.access": "all",
  // GitHub MCP Server (v1.107 built-in preview)
  "github.copilot.chat.githubMcpServer.enabled": true,
  "github.copilot.chat.githubMcpServer.readonly": false,
  // MCP server sampling configuration - allow all servers to use all models
  // Note: Server names must match those defined in .vscode/mcp.json
  "chat.mcp.serverSampling": {
    "github": {
      "allowedModels": [
        "*"
      ]
    },
    "memory": {
      "allowedModels": [
        "*"
      ]
    },
    "gemini": {
      "allowedModels": [
        "*"
      ]
    },
    "the_collective/.vscode/mcp.json: gemini": {
      "allowedModels": [
        "copilot/claude-sonnet-4.5",
        "copilot/auto",
        "copilot/claude-haiku-4.5",
        "copilot/claude-opus-4.5",
        "copilot/claude-sonnet-4",
        "gemini/models/gemini-3-flash-preview",
        "gemini/models/gemini-2.5-pro",
        "copilot/gemini-2.5-pro",
        "copilot/gemini-3-flash-preview",
        "copilot/gemini-3-pro-preview",
        "copilot/gpt-4.1",
        "copilot/gpt-4o",
        "copilot/gpt-5",
        "copilot/gpt-5-mini",
        "copilot/gpt-5-codex",
        "copilot/gpt-5.1",
        "copilot/gpt-5.1-codex",
        "copilot/gpt-5.1-codex-max",
        "copilot/gpt-5.1-codex-mini",
        "copilot/gpt-5.2",
        "copilot/grok-code-fast-1",
        "copilot/oswe-vscode-prime"
      ]
    },
    "the_collective/.vscode/mcp.json: memory": {
      "allowedModels": [
        "copilot/claude-sonnet-4.5",
        "copilot/auto",
        "copilot/claude-haiku-4.5",
        "copilot/claude-opus-4.5",
        "copilot/claude-sonnet-4",
        "gemini/models/gemini-3-flash-preview",
        "gemini/models/gemini-2.5-pro",
        "copilot/gemini-2.5-pro",
        "copilot/gemini-3-flash-preview",
        "copilot/gemini-3-pro-preview",
        "copilot/gpt-4.1",
        "copilot/gpt-4o",
        "copilot/gpt-5",
        "copilot/gpt-5-mini",
        "copilot/gpt-5-codex",
        "copilot/gpt-5.1",
        "copilot/gpt-5.1-codex",
        "copilot/gpt-5.1-codex-max",
        "copilot/gpt-5.1-codex-mini",
        "copilot/gpt-5.2",
        "copilot/grok-code-fast-1",
        "copilot/oswe-vscode-prime"
      ]
    }
  },
  // ═══════════════════════════════════════════════════════════════════
  // TERMINAL CONFIGURATION
  // ═══════════════════════════════════════════════════════════════════
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.enablePersistentSessions": true,
  // ═══════════════════════════════════════════════════════════════════
  // POWERSHELL CONFIGURATION
  // ═══════════════════════════════════════════════════════════════════
  // PowerShell is optional on Linux/macOS, built-in on Windows
  // On Linux: sudo apt install powershell (or snap install powershell --classic)
  // On macOS: brew install powershell
  // ═══════════════════════════════════════════════════════════════════
  // DOCKER CONFIGURATION
  // ═══════════════════════════════════════════════════════════════════
  // Docker Desktop handles socket configuration automatically on all platforms
  "docker.dockerComposeBuild": true,
  "docker.dockerComposeDetached": true,
  // ═══════════════════════════════════════════════════════════════════
  // TYPESCRIPT / JAVASCRIPT
  // ═══════════════════════════════════════════════════════════════════
  "typescript.preferences.importModuleSpecifier": "relative",
  "javascript.preferences.importModuleSpecifier": "relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.suggest.completeFunctionCalls": true,
  // ═══════════════════════════════════════════════════════════════════
  // LANGUAGE-SPECIFIC FORMATTERS
  // ═══════════════════════════════════════════════════════════════════
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.formatOnSave": false,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    }
  },
  "[yaml]": {
    "editor.autoIndent": "advanced",
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  // ═══════════════════════════════════════════════════════════════════
  // PROBLEMS & DIAGNOSTICS
  // ═══════════════════════════════════════════════════════════════════
  "problems.showCurrentInStatus": true,
  "problems.decorations.enabled": true,
  // ═══════════════════════════════════════════════════════════════════
  // GIT CONFIGURATION
  // ═══════════════════════════════════════════════════════════════════
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.suggestSmartCommit": true,
  // ═══════════════════════════════════════════════════════════════════
  // TESTING
  // ═══════════════════════════════════════════════════════════════════
  "testing.automaticallyOpenPeekView": "failureInVisibleDocument",
  "testing.showCoverageInExplorer": true,
  // ═══════════════════════════════════════════════════════════════════
  // EXPERIMENTAL FEATURES (v1.107 December 2025)
  // ═══════════════════════════════════════════════════════════════════
  // Inline chat v2 (optimized for single-file edits)
  "inlineChat.enableV2": true,
  // Subagent support with custom agents
  "chat.customAgentInSubagent.enabled": true,
  // Agent thinking display
  "chat.agent.thinkingStyle": "fixedScrolling",
  "chat.agent.thinking.collapsedTools": "always",
  // Chat view improvements
  "chat.viewTitle.enabled": true,
  "chat.viewWelcome.enabled": true,
  "chat.viewRestorePreviousSession": true,
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.experimentalGpuAcceleration": "off",
  "chat.useAgentSkills": true,
  "[dockercompose]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-containers"
  },
  "chat.tools.terminal.enableAutoApprove": true,
  "chat.tools.terminal.autoApprove": {
    "cd": true,
    "echo": true,
    "ls": true,
    "pwd": true,
    "cat": true,
    "head": true,
    "tail": true,
    "findstr": true,
    "wc": true,
    "tr": true,
    "cut": true,
    "cmp": true,
    "which": true,
    "basename": true,
    "dirname": true,
    "realpath": true,
    "readlink": true,
    "stat": true,
    "file": true,
    "du": true,
    "df": true,
    "sleep": true,
    "nl": true,
    "grep": true,
    "npm *": true,
    "npx *": true,
    "yarn *": true,
    "pnpm *": true,
    "git init": false,
    "git status": true,
    "git log": true,
    "git show": true,
    "git diff": true,
    "git grep": true,
    "git branch": true,
    "/^git branch\\b.*-(d|D|m|M|-delete|-force)\\b/": false,
    "docker *": true,
    "podman *": true,
    "kubectl *": true,
    "az *": false,
    "aws *": false,
    "gcloud *": false,
    "Get-Process": true,
    "Get-ChildItem": true,
    "Get-Content": true,
    "Get-Date": true,
    "Get-Random": true,
    "Get-Location": true,
    "Write-Host": true,
    "Write-Output": true,
    "Split-Path": true,
    "Join-Path": true,
    "Start-Sleep": true,
    "Where-Object": true,
    "/^Select-[a-z0-9]/i": true,
    "/^Measure-[a-z0-9]/i": true,
    "/^Compare-[a-z0-9]/i": true,
    "/^Format-[a-z0-9]/i": true,
    "/^Sort-[a-z0-9]/i": true,
    "column": true,
    "/^column\\b.*-c\\s+[0-9]{4,}/": false,
    "date": true,
    "/^date\\b.*(-s|--set)\\b/": false,
    "find": true,
    "/^find\\b.*-(delete|exec|execdir|fprint|fprintf|fls|ok|okdir)\\b/": true,
    "sort": true,
    "/^sort\\b.*-(o|S)\\b/": false,
    "tree": true,
    "/^tree\\b.*-o\\b/": false,
    "rm": false,
    "rmdir": false,
    "del": false,
    "Remove-Item": false,
    "ri": false,
    "rd": false,
    "erase": false,
    "dd": false,
    "kill": false,
    "ps": false,
    "top": false,
    "Stop-Process": false,
    "spps": false,
    "taskkill": false,
    "taskkill.exe": false,
    "curl": false,
    "wget": false,
    "Invoke-RestMethod": false,
    "Invoke-WebRequest": false,
    "irm": false,
    "iwr": false,
    "chmod": false,
    "chown": false,
    "Set-ItemProperty": false,
    "sp": false,
    "Set-Acl": false,
    "jq": false,
    "xargs": false,
    "eval": false,
    "Invoke-Expression": false,
    "iex": false
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-containers"
  },
  "containers.composeBuild": true,
  "containers.composeDetached": true,
}
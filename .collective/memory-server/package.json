{
  "name": "@the-collective/memory-server",
  "version": "0.1.0",
  "description": "Enhanced vector-enabled memory server for the_collective",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "dist/index.js",
  "bin": {
    "collective-memory": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && cp src/core-memories.json dist/ && cp src/core-memories.schema.json dist/",
    "test": "vitest run",
    "test:watch": "vitest",
    "bootstrap": "node dist/bootstrap.js",
    "validate": "tsc --noEmit && eslint src/**/*.ts --ignore-pattern '*.test.ts'"
  },
  "keywords": [
    "mcp",
    "memory",
    "vector-db",
    "ai",
    "the-collective"
  ],
  "overrides": {
    "node-gyp": "^11.0.0",
    "glob": "^11.0.0",
    "rimraf": "^6.0.0",
    "@npmcli/move-file": "npm:@npmcli/fs@^4.0.0",
    "onnxruntime-node": "^1.21.0"
  },
  "author": "screamingearth",
  "license": "MPL-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@huggingface/transformers": "^3.8.1",
    "duckdb": "^1.4.3",
    "express": "^4.21.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.16"
  }
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Core Memories",
  "description": "Schema for the_collective's core memory bootstrap file",
  "type": "object",
  "required": [
    "version",
    "memories"
  ],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of this file"
    },
    "memories": {
      "type": "array",
      "description": "Array of core memories to bootstrap",
      "items": {
        "type": "object",
        "required": [
          "content",
          "type",
          "importance",
          "tags"
        ],
        "properties": {
          "content": {
            "type": "string",
            "description": "The memory content text",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": [
              "conversation",
              "code",
              "decision",
              "context"
            ],
            "description": "Memory type category"
          },
          "importance": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Importance score from 0 to 1"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Tags for categorization and search"
          }
        }
      }
    }
  }
}
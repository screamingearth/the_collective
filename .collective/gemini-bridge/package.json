{
  "name": "@the-collective/gemini-bridge",
  "version": "0.1.0",
  "description": "MCP server for Google Gemini integration in the_collective",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "collective-gemini": "./dist/mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "auth": "npx @google/gemini-cli",
    "test": "vitest run",
    "test:watch": "vitest",
    "doctor": "node dist/doctor.js",
    "validate": "tsc --noEmit && eslint src/**/*.ts --ignore-pattern '*.test.ts'"
  },
  "keywords": [
    "mcp",
    "gemini",
    "ai",
    "the-collective"
  ],
  "author": "screamingearth",
  "license": "MPL-2.0",
  "dependencies": {
    "@google/gemini-cli": "^0.21.2",
    "@modelcontextprotocol/sdk": "^1.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.10.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

# the_collective npm configuration
# Ensures consistent behavior across different environments
# NOTE: This is a copy of the root .npmrc - keep in sync

# Use exact versions for reproducible installs
save-exact=true

# Generate lockfile v3 format (npm 10+)
lockfile-version=3

# Show progress during install
progress=true

# Fail on peer dependency conflicts (catch issues early)
strict-peer-deps=false

# Fund messages are noise - suppress them
fund=false

# Auto-install peer dependencies (npm 7+ default, but be explicit)
legacy-peer-deps=false
